{
  "manifest_version": 3,
  "name": "tb-inbox-organizer",
  "description": "Multi-account inbox cleaner and organizer for Thunderbird",
  "version": "0.1.0",
  "author": "Emmanuel LASTRA DE NATIAS <emmanuel@eldn-dev.com>",
  "homepage_url": "https://eldn-dev.com",

  "browser_specific_settings": {
    "gecko": {
      "id": "tb-inbox-organizer@local",
      "strict_min_version": "115.0"
    }
  },

  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },

  "permissions": [
    "accountsRead",
    "messagesRead"
  ],

  "icons": {
    "48": "icons/icon.svg"
  }
}